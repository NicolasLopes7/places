---
import FormattedDate from "@components/misc/formatted-date.astro";

const { title, date, slug } = Astro.props;
---

<a href={`/places/${slug}`}>
  <article
    class="text-base font-medium flex flex-row items-center justify-between w-full"
  >
    <div class="flex flex-row items-center gap-2">
      <h3 class="text-gray-300 hover:text-white">
        {title}
      </h3>
    </div>
    <p class="text-gray-500 font-medium">
      <FormattedDate date={date || 0} />
    </p>
  </article>
</a>
