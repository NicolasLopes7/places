---
interface Props {
  src: string;
}
---

<div class="relative">
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="w-full h-full bg-gray-900 bg-opacity-75 transition-opacity duration-300 ease-in-out group-hover:opacity-0"></div>
  </div>
  <img
    class="w-full h-full object-cover object-center group-hover:scale-110 transition-transform duration-300 ease-in-out"
    src={Astro.props.src}
    alt=""
  />
</div>